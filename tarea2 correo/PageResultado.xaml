<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="tarea2_correo.PageResultado">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="{Binding nombre}"
                   FontSize="Body" Margin="20"  BackgroundColor="Violet" TextColor="Black" 
                   
               />
            <Label Text="{Binding apellidos}"
                   FontSize="Body" Margin="20" BackgroundColor="Violet" TextColor="Black"
               />
            <Label Text="{Binding edad}"
                   FontSize="Body" Margin="20" BackgroundColor="Violet" TextColor="Black"
                    
               />
            <Label Text="{Binding correo}"
                   FontSize="Body" Margin="20" BackgroundColor="Violet" TextColor="Black" AnchorX="12" AnchorY=" 12"
                   
               />
           


        </StackLayout>
    </ContentPage.Content>
</ContentPage>